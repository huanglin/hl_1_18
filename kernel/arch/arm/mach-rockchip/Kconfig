if ARCH_ROCKCHIP

menu "Rockchip system-on-chip"


choice 
	prompt "machine products"
config RK2818_SDK
	bool "Rockchip  rk2818 sdk board"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818

config RK2818_A7
	bool "Rockchip  rk2818 A7 product"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818

config RK2818_A7_V1_1
        bool "Rockchip  rk2818 A7 V1.1 product"
        depends on ARCH_ROCKCHIP
        select CHIP_RK2818

config RK2808_SDK
	bool "Rockchip  rk2808 sdk board for development"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2808

endchoice

choice 
	prompt "Eink products"
config RK2818_BOARD_SDK
	bool "Rockchip rk2818 board sdk"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818

config RK2818_BOARD_REF
	bool "Rockchip rk2818 board ref"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818

endchoice

choice 
	prompt "Select DDR TYPE"
config DDR2
	bool "DDR2 TYPE"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818
config LPDDR
	bool "LPDDR TYPE"
	depends on ARCH_ROCKCHIP
	select CHIP_RK2818
endchoice

comment  "rockchip chip type"
config CHIP_RK2818
	bool		
config CHIP_RK2808
	bool	
	
if ARCH_ROCKCHIP

comment  "rockchip processor"
	
config CPU_ARM926T
	bool "CPU_ARM926T"
	default y

config CPU_32
	bool "CPU_32"
	default y
		
config CPU_32v5
	bool "CPU_32v5"
	default y
		
config CPU_ABRT_EV5TJ
	bool "CPU_ABRT_EV5TJ"
	default y
		
config CPU_CACHE_VIVT
	bool "CPU_CACHE_VIVT"
	default y
		
config CPU_COPY_V4WB
	bool "CPU_COPY_V4WB"
	default y
		
config CPU_TLB_V4WBI
	bool "CPU_TLB_V4WBI"
	default y
		
config CPU_CP15
	bool "CPU_CP15"
	default y
		
config CPU_CP15_MMU
	bool "CPU_CP15_MMU"
	default y

config CPU_CP15
	bool "PROCESS_CP15"
	default y

endif

endmenu

endif
